# Server Configuration
PORT=5000
NODE_ENV=production

# Database Configuration (PostgreSQL)
DB_HOST=your-db-host
DB_PORT=5432
DB_NAME=your-db-name
DB_USER=your-db-user
DB_PASSWORD=your-secure-db-password

# JWT Configuration
JWT_SECRET=CHANGE_THIS_TO_A_VERY_LONG_RANDOM_STRING_IN_PRODUCTION
JWT_EXPIRE=7d
JWT_RESET_EXPIRE=15m

# Network Security (optional - disable for testing)
ENABLE_IP_RESTRICTION=true
ALLOWED_IPS=127.0.0.1,::1

# Email Configuration (for password reset)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=E-Attendance System <noreply@attendance.com>

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Attendance Rules
CHECK_IN_START_TIME=09:00
CHECK_IN_END_TIME=09:30
LATE_THRESHOLD_MINUTES=30
HALF_DAY_HOURS=4
FULL_DAY_HOURS=8

# Leave Rules
ANNUAL_PAID_LEAVES=7
